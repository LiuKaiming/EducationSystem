<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qdu.mapping.CourseDetailMapping">
	<resultMap type="com.qdu.pojo.CourseDetail" id="CourseDetailResult">
		<id property="cdetailId" column="CDetailID" />
		<result property="cdetailCotent" column="CDetailCotent" />
		<result property="cdetailSchoolHour" column="CDetailSchoolHour" />
		
		<association property="course" javaType="com.qdu.pojo.Course">
			<id property="courseId" column="CourseID" />
			<result property="courseName" column="CourseName" />
			<result property="courseExamMethod" column="CourseExamMethod" />
			<result property="coursecredit" column="Coursecredit" />
			<result property="courseSchoolHour" column="CourseSchoolHour" />
			
			<association property="teacher" javaType="com.qdu.pojo.Teacher">
			<id property="teacherId" column="TeacherID" />
			<result property="teacherName" column="TeacherName" />
			<result property="teacherPwd" column="TeacherPwd" />
			<result property="teacherGender" column="TeacherGender" />
			</association>
			
			</association>

	</resultMap>

</mapper>

